<%- include('../partials/header'); -%>
<div style="max-width:60rem; width:90%; margin:10px auto;">
   <div class="row">
        <div class="col-xs-12">
            <h1 style="text-align:center">Register Customer</h1>
            <form action="/customer/register" method="POST">
                <div class="form-group">
                    <label>Customer's Name</label>
                    <input class="form-control" type="text" name="customer[name]" placeholder="customer's name" required>
                </div>
                
                <div class="form-group">
                    <label>Phone Number</label>
                    <input class="form-control" type="text" name="customer[phoneNum]" placeholder="customer's phone number" required>
                </div>
                
                 <div class="form-group">
                    <label>Request</label>
                    <input class="form-control" type="text" name="customer[request]" placeholder="customer's request" required>
                </div>
                
                <div class="form-group">
                    <label>Area</label>
                    <input class="form-control" type="text" name="customer[area]" placeholder="customer's area of interest" required>
                </div>
                              
                <div class="form-group">
                    <button class= "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); -%>
